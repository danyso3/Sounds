<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.danielasanchezollervides.sounds.MainActivity"
    android:background="#25eaf4">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOM"
        android:id="@+id/button_boom"
        android:layout_marginTop="42dp"
        android:clickable="true"
        android:onClick="soundboom"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Funny Sounds"
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:textStyle="bold"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALARM"
        android:id="@+id/button_alarm"
        android:onClick="soundalarm"
        android:layout_alignTop="@+id/button_boom"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOING"
        android:id="@+id/button_boing"
        android:layout_alignTop="@+id/button_alarm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="soundboing"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OMG"
        android:id="@+id/button_omg"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="soundomg"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROOSTER"
        android:id="@+id/button_chicken"
        android:onClick="soundchicken"
        android:layout_alignTop="@+id/button_omg"
        android:layout_centerHorizontal="true"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAD JOKE"
        android:id="@+id/button_badjoke"
        android:layout_alignTop="@+id/button_chicken"
        android:layout_alignRight="@+id/button_boing"
        android:layout_alignEnd="@+id/button_boing"
        android:layout_alignLeft="@+id/button_boing"
        android:layout_alignStart="@+id/button_boing"
        android:onClick="soundbadjoke"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LAUGH"
        android:id="@+id/button_laugh"
        android:layout_below="@+id/button_badjoke"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp"
        android:onClick="soundlaugh"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TDFW"
        android:id="@+id/button_tdfw"
        android:layout_alignTop="@+id/button_laugh"
        android:layout_centerHorizontal="true"
        android:onClick="soundtdfw"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WTF"
        android:id="@+id/button_wtf"
        android:layout_alignTop="@+id/button_tdfw"
        android:layout_alignRight="@+id/button_badjoke"
        android:layout_alignEnd="@+id/button_badjoke"
        android:onClick="soundwtf"
        android:clickable="true" />
</RelativeLayout>
